public class Leitura{
  public static void main(String SuperTrunfo[]){
    
    String mostra="";
    String nomeArq="cartas.txt"; //Nome do arquivo, pode ser absoluto, ou pastas /dir/teste.txt
    String linha="";
    File arq = new File(nomeArq);
    
    //Arquivo existe
    if (arq.exists()){
      mostra="Arquivo - '"+nomeArq+"', aberto com sucesso!\n";
      mostra+="Tamanho do arquivo "+Long.toString(arq.length())+"\n";
      //tentando ler arquivo
      try{
        //abrindo arquivo para leitura
        FileReader reader = new FileReader(nomeArq);
        //leitor do arquivo
        BufferedReader leitor = new BufferedReader(reader);
        
        while(true){
          
          linha = leitor.readLine();
          
          mostra+=linha+"\n";
          
          
          System.out.println(mostra);
          
        }
      }
      catch(Exception erro) {}
      
      //JOptionPane.showMessageDialog(null,mostra,"Arquivo...",1);
    }
    
    
    
    /*try {
